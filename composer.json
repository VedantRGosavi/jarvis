{
  "name": "jarvis/gaming-companion-overlay",
  "description": "Jarvis: A minimalist gaming companion overlay tool for games like Elden Ring and Baldur's Gate 3",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "stripe/stripe-php": "^10.0",
    "vlucas/phpdotenv": "^5.5",
    "ext-sqlite3": "*",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
} 