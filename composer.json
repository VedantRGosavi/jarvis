{
  "name": "fridayai/gaming-companion-overlay",
  "description": "FridayAI: A minimalist gaming companion overlay tool for games like Elden Ring and Baldur's Gate 3",
  "type": "project",
  "require": {
    "php": "^8.1",
    "stripe/stripe-php": "^10.0",
    "vlucas/phpdotenv": "^5.5",
    "ext-sqlite3": "*",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\Models\\": "app/models/",
      "App\\Utils\\": "app/utils/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "heroku/installer-plugin": true
    }
  },
  "require-dev": {
    "heroku/heroku-buildpack-php": "*"
  },
  "scripts": {
    "post-install-cmd": [
      "chmod -R 777 storage"
    ]
  }
}
